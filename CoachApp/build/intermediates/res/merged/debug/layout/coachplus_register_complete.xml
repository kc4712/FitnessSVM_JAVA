<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/coachplus_main_logo_02"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#F7F7F7"
        android:gravity="center">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="46dp"
            android:background="@drawable/coach_intro_text"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_complete"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_integrated"
            android:text="Next"
            style="@style/grcomm_button_large"
            android:id="@+id/complete_btn_next"
            />

    </LinearLayout>


</LinearLayout>